@model IEnumerable<Author>

<div class="row">
    <div class="col-lg-10">
        <h1>Author Table</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary" asp-controller="Product" asp-action="CreateAuthor">Create Author</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th >#</th>
                    <th >Name</th>

                </tr>
            </thead>
            <tbody id="AuthorTable">
                @await Html.PartialAsync("_AuthorTablePartialcshtml",Model) 
            </tbody>
        </table>
    </div>

</div>